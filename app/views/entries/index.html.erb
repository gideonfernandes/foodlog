<% content_for(:title) do %>
  FoodLog &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <div class="card-header">
          <p class="card-header-title">
            <%= entry.meal_type %>
          </p>
        </div>
        <div class="card-content">
          <div class="content">
            <p><span class="has-text-weight-bold"><%= entry.calories %></span> calorias</p>
            <p><span class="has-text-weight-bold"><%= entry.proteins %></span> prote√≠nas</p>
            <p><span class="has-text-weight-bold"><%= entry.carbohydrates %></span> carboidratos</p>
            <p><span class="has-text-weight-bold"><%= entry.fats %></span> gorduras</p>
            <p class="italic">Logado <%= time_ago_in_words(entry.created_at) %></p>
          </div>
        </div>         
        <div class="card-footer">
          <%= link_to 'Show', entry, class: "card-footer-item" %>
          <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
