<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %>
      </p>

      <div class="panel-block">
        Calorias: <%= @entry.calories %>
      </div>

      <div class="panel-block">
        Proteínas:
        <%= @entry.proteins %>
      </div>

      <div class="panel-block">
        Carboidratos:
        <%= @entry.carbohydrates %>
      </div>

      <div class="panel-block">
        Gorduras:
        <%= @entry.fats %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Editar', edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to 'Deletar', entry_path(@entry), method: :delete, data: { confirm: "Você tem certeza?" }, class: "button is-danger" %>
      </div>

      <div class="column">
        <%= %>
      </div>
    </div>
  </div>
</div>
